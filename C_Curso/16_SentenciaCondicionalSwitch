#include <stdio.h>
#include <stdlib.h>

int main()
{
    double num1 = 5.0;
    double num2 = 3.0;
    char operacion = '1';
    switch(operacion) {
case '+':
    printf("%f + %f = %f", num1, num2, num1 + num2);
    break;
case '-':
     printf("%f - %f = %f", num1, num2, num1 - num2);
    break;
case '*':
     printf("%f * %f = %f", num1, num2, num1 * num2);
    break;
case '/':
     printf("%f / %f = %f", num1, num2, num1 / num2);
    break;
default:
    printf("Error");


    }

    return 0;
}



